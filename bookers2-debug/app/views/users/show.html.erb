<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info1', user: @user %>
      
      <% unless current_user == @user %>
       <% if current_user.following?(@user) %>
        <%= link_to 'フォロー外す', unfollow_path(@user.id),class: "btn btn-info",method: :POST %>
      <% else %>
        <%= link_to 'フォローする', follow_path(@user.id),class: "btn btn-success", method: :POST %>
      <% end %>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= render 'users/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books, user: @user %>
    </div>
  </div>
</div>